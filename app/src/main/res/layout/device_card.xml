<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:blurkit="http://schemas.android.com/tools"
    android:longClickable="true">
        <eightbitlab.com.blurview.ClipView
            android:id="@+id/blurLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            app:blurOverlayColor="@color/colorOverlay"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <LinearLayout
                        android:id="@+id/icon_text_holder"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="2dp"
                        android:paddingBottom="1dp"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/icon_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sfpro_display_medium"/>
                        <TextView
                            android:id="@+id/icon_text_sup"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:paddingTop="1.2dp"
                            android:textSize="6sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sfpro_display_medium"/>
                    </LinearLayout>
                </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/warning_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/room_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="1.3dp"
                    android:fontFamily="@font/sfpro_display_medium"/>
                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_marginTop="1.5dp"
                    android:fontFamily="@font/sfpro_display_medium"/>
            </LinearLayout>
        <TextView
            android:id="@+id/additional_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/dark_gray_on"
            android:textSize="13sp"
            android:singleLine="true"
            android:fontFamily="@font/sfpro_display_medium"
            />
</RelativeLayout>